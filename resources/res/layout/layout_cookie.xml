<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/layoutCookie" android:background="@color/background_alternative" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="100dp" android:src="@drawable/logo_plp_text_blue" android:layout_centerHorizontal="true" android:contentDescription="@null"/>
    <androidx.cardview.widget.CardView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:translationY="40dp" app:cardCornerRadius="20dp" app:cardElevation="10dp">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:background="@drawable/view_cookie_warning" android:layout_width="270dp" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/text_title_alternative" android:gravity="center" android:background="@color/background_theme" android:layout_width="match_parent" android:layout_height="90dp" android:text="@string/purchase_cookie_title"/>
            <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:src="@drawable/cookie" android:contentDescription="@null"/>
            <TextView android:textSize="14sp" android:textColor="@color/text_title_default" android:gravity="center" android:id="@+id/textViewCookieSubtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/purchase_cookie_subtitle" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
            <androidx.appcompat.widget.AppCompatCheckBox android:textSize="14sp" android:textColor="@color/text_title_default" android:id="@+id/checkboxCookieNoReminder" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/purchase_cookie_no_reminder"/>
            <Button android:id="@+id/buttonCookieContinue" android:layout_width="200dp" android:layout_marginTop="10dp" android:layout_marginBottom="30dp" android:text="@string/purchase_cookie_continue" style="@style/MRButton"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
