<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:orientation="vertical" android:background="@color/background_alternative" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="22sp" android:textColor="@color/text_theme" android:gravity="center" android:id="@+id/textViewCashbackIncrease" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:text="@string/cashback_increase" android:drawablePadding="2dp" app:drawableStartCompat="@drawable/cashback_increase"/>
    <TextView android:textSize="22sp" android:textStyle="bold" android:textColor="@color/text_title_default" android:gravity="center" android:id="@+id/textViewTitle" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/poulpeo_plus" android:gravity="center" android:id="@+id/textViewPoulpeoPlusBonus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/merchant_bonus_no_poulpeo_plus"/>
    <Button android:id="@+id/buttonSeeConditions" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/cashback_button_see_conditions" style="@style/MRButtonAlternativeNoStroke"/>
    <Button android:textSize="18sp" android:id="@+id/buttonActivateCashback" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="0dp" android:text="@string/cashback_button_activate_label" style="@style/MRButton"/>
    <TextView android:textSize="12sp" android:textColor="@color/text_subtitle_default" android:gravity="center_vertical" android:id="@+id/textViewAppToApp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:drawablePadding="2dp" android:lineSpacingExtra="-4sp" app:drawableStartCompat="@drawable/app_to_app"/>
</LinearLayout>
