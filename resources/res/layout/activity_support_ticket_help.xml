            <TextView android:textSize="20sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginBottom="20dp" android:text="@string/support_ticket_help_header" android:layout_marginStart="16dp"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/layoutHelpContainer" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <Button android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/buttonAddSupportTicket" android:layout_marginBottom="32dp" android:src="@drawable/action_add" android:text="@string/support_ticket_help_button_add" style="@style/MRButton"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
