<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="true">
        <ripple android:color="?attr/colorControlHighlight">
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="50dp"/>
                    <gradient android:startColor="@color/background_theme_gradient" android:endColor="@color/background_theme" android:angle="0" android:type="linear"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_background_disabled"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>
</selector>
