<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:orientation="vertical" android:paddingTop="28dp" android:paddingBottom="28dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="26sp" android:textColor="@color/text_title_default" android:id="@+id/textViewTitle" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout android:gravity="center_vertical" android:id="@+id/ratingLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp">
        <RatingBar android:id="@+id/ratingBar" android:layout_width="wrap_content" android:layout_height="16dp" android:progressDrawable="@drawable/rating_layers_medium" android:numStars="5" android:stepSize="1" android:isIndicator="true"/>
        <TextView android:textSize="14sp" android:textColor="@color/text_subtitle_default" android:id="@+id/textViewNumberReviews" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp"/>
    </LinearLayout>
    <View android:layout_width="60dp" android:layout_marginTop="18dp" style="@style/separator_alternative"/>
</LinearLayout>
