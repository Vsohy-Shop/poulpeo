<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/button_flat_alternative_style" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginStart="4dp">
    <View android:id="@+id/statusColorView" android:layout_width="4dp" android:layout_height="wrap_content" android:layout_alignBottom="@+id/separator" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <TextView android:textSize="13sp" android:textColor="@color/text_subtitle_default" android:id="@+id/dateTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_alignParentTop="true" android:layout_marginStart="16dp" android:layout_toEndOf="@+id/statusColorView"/>
    <RelativeLayout android:id="@+id/labelContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/dateTextView" android:layout_alignStart="@+id/dateTextView">
        <TextView android:textSize="16sp" android:ellipsize="marquee" android:id="@+id/labelTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true" android:layout_centerVertical="true" android:layout_marginEnd="16dp" android:layout_toStartOf="@+id/amountTextView" android:layout_alignParentStart="true"/>
        <TextView android:textSize="18sp" android:id="@+id/amountTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="16dp" android:layout_toStartOf="@+id/statusImageView"/>
        <ImageView android:id="@+id/statusImageView" android:layout_width="28dp" android:layout_height="28dp" android:layout_centerVertical="true" android:layout_marginEnd="2dp" android:layout_toStartOf="@+id/groupStateImageButton"/>
        <ImageButton android:id="@+id/groupStateImageButton" android:background="@null" android:clickable="false" android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/action_expand_black" android:layout_centerVertical="true" android:foregroundGravity="center" android:layout_marginEnd="8dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View android:id="@+id/separator" android:layout_marginTop="16dp" android:layout_below="@+id/labelContainer" style="@style/separator_default"/>
</RelativeLayout>
