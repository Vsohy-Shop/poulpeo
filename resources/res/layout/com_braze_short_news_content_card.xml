<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" style="@style/Braze.ContentCards.ShortNews.Root">
    <RelativeLayout android:id="@+id/com_braze_content_cards_short_news_card_image_container" style="@style/Braze.ContentCards.ShortNews.ImageContainer">
        <ImageView android:id="@+id/com_braze_content_cards_short_news_card_image" style="@style/Braze.ContentCards.ShortNews.Image"/>
    </RelativeLayout>
    <ImageView android:id="@+id/com_braze_content_cards_pinned_icon" style="@style/Braze.ContentCards.PinnedIcon.ShortNews"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Braze.ContentCards.ShortNews.Container">
        <TextView android:id="@+id/com_braze_content_cards_short_news_card_title" style="@style/Braze.ContentCards.ShortNews.Title"/>
        <TextView android:id="@+id/com_braze_content_cards_short_news_card_description" style="@style/Braze.ContentCards.ShortNews.Description"/>
        <TextView android:id="@+id/com_braze_content_cards_action_hint" style="@style/Braze.ContentCards.ActionHint.ShortNews"/>
    </RelativeLayout>
    <View android:id="@+id/com_braze_content_cards_unread_bar" style="@style/Braze.ContentCards.UnreadBar.ShortNews"/>
</RelativeLayout>
