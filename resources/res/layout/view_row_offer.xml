<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:id="@+id/layoutMain" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/offer_card_margin" android:layout_marginBottom="2dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:cardCornerRadius="8dp" app:cardElevation="2dp">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:background="?attr/selectableItemBackground" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false" android:minHeight="120dp">
        <RelativeLayout android:layout_width="95dp" android:layout_height="wrap_content">
