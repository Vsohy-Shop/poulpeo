        </LinearLayout>
    </LinearLayout>
    <TextView android:textSize="8sp" android:textStyle="bold" android:textColor="@color/text_title_default" android:layout_gravity="end" android:id="@+id/mentionAd" android:background="@drawable/shape_rectangle_rounded_border" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/type_cell_ad" android:paddingStart="6dp" android:paddingEnd="6dp" android:layout_marginEnd="8dp"/>
</androidx.cardview.widget.CardView>
